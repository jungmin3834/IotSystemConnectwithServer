<Window x:Class="WFP_TV.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
 Title="TV" Height="312" Width="574">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Margin="0,39,0,-14" >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button Margin="5" Content="전원" Grid.Column="0" Click="TV_Click" />
                <Button Margin="5" Content="채널" Grid.Column="1" Click="Channel_Click_1" />
                <TextBox  Margin="5" Name="tb_tv" Grid.Column="2" />
            </Grid>
        </StackPanel>
        <Canvas Name="canvas" Background="Gray" HorizontalAlignment="Left" Height="121" Margin="10,99,0,0" VerticalAlignment="Top" Width="546"/>

    </Grid>
</Window>
